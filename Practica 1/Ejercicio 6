# Imports go at the top
from microbit import *


# Code in a 'while True:' loop repeats forever
while True:
    display.show(Image('99999:'
                       '90009:'
                       '90009:'
                       '90009:'
                       '99999'))
    sleep(1000)
    display.clear()
    display.show(Image('00000:'
                       '09990:'
                       '09990:'
                       '09990:'
                       '00000'))
    sleep(1000)
    
